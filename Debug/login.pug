html
    head
        meta(charset="UTF-8")
        title 식자재 재고 관리 시스템
        link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css", rel="stylesheet", id="bootstrap-css")
    body
    
    script.
        window.onload=function check(){
            if ('#{check}'=="0"){ 
                alert("아이디가 일치하지 않습니다.")
                document.getElementById('uid').focus();
                }
            else if ('#{check}'=="1"){
                alert("패스워드가 일치하지 않습니다.")
                document.getElementById('upwd').focus();
                }
            else return true;
        }
    br 
    br
    br
    br
    br
    div(class="container")
        div(class="row")
            div(class="col-sm-6 col-md-4 col-md-offset-4")
                h1(class="text-center login-title") 식자재 재고관리
                div(class="account-wall")
                br
                br
                form(class="form-signin", action='login', accept-charset="utf-8", method="post")
                    input(type="text", class="form-control", name="uid", value="example", placeholder="ID", required autofocus)
                    br
                    input(type="password", class="form-control", name="upwd", value="1111", placeholder="Password", required)
                    br
                    button(class="btn btn-lg btn-primary btn-block", type="submit") Sign in
                    br
                a(href="/register" class="text-center new-account") Create an account
                span(class="button", type="hidden",id="check")
      
        script(src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js")
        script(src="//code.jquery.com/jquery-1.11.1.min.js")